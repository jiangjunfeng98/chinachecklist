---
import BaseLayout from '../layouts/BaseLayout.astro';

import CallToAction from '../components/CallToAction.astro';
import Reason from '../components/Reason.astro';
import ContactToMe from '../components/ContactToMe.astro';

// 选择原因
const reasonList: { title: string; describe: string; img?: string }[] = [
  {
    title: 'China Expertise',
    describe:
      'Leverage our deep understanding of the Chinese market and extensive local connections to source the best products and services for your needs.',
    img: '/assets/home/icon/objective-reports.svg'
  },
  {
    title: 'Tailored Solutions',
    describe: 'Benefit from our personalized sourcing services, designed to meet your specific requirements with efficiency and precision.',
    img: '/assets/home/icon/confidentiality.svg'
  },
  {
    title: 'Exclusive Service',
    describe:
      'Enjoy one-on-one attention with our dedicated account managers who are committed to providing you with high-quality and cost-effective solutions.',
    img: '/assets/home/icon/confidentiality.svg'
  },
  {
    title: 'Global Trade',
    describe: 'Connect with a wide range of industries across China and access the most competitive prices with our comprehensive trade services.',
    img: '/assets/home/icon/confidentiality.svg'
  },
  {
    title: 'Cost-Effective',
    describe: 'Maximize the value of your procurement with our cost-effective solutions, ensuring you get the best quality at the best price.',
    img: '/assets/home/icon/confidentiality.svg'
  }
];
---

<BaseLayout>
  <div class="gap-20 lg:gap-48">
    <div class="bg-cover bg-center bg-[url('/assets/home/香港.jpg')] h-[500px]">
      <div class="h-full flex flex-col items-center justify-center text-white">
        <h1 class="pb-4">Welcome to ChinaSupport</h1>
        <div class="text-2xl pb-6">Your trusted source for detailed, objective, and confidential reports on Chinese companies.</div>
        <div class="text-xl mb-9">Make informed business decisions with confidence.</div>

        <CallToAction href="#contact-us"> Contact US </CallToAction>
      </div>
    </div>

    <div class="bg-white dark:bg-slate-800 py-16 sm:py-20">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto lg:mx-0">
          <p class="text-3xl text-center font-semibold leading-7">Our Services</p>
          <div class="flex justify-between space-x-20 mt-10">
            <div class="flex-1 bg-[#F7FCFF] rounded-lg shadow-md p-5 flex flex-col justify-center items-center">
              <img src="/assets/home/icon/yanxuan.svg" alt="Trade" class="w-20 h-20 mb-2" />
              <h2 class="text-2xl">Merchandise Trade</h2>
              <h3 class="text-lg font-normal">Help you find your desired and affordable products</h3>
            </div>
            <div class="flex-1 bg-[#F7FCFF] rounded-lg shadow-md p-5 flex flex-col justify-center items-center">
              <img src="/assets/home/icon/report.svg" alt="Report" class="w-20 h-20 mb-2" />
              <h2 class="text-2xl">Objective Reports</h2>
              <h3 class="text-lg font-normal">detailed, objective, and confidential reports on Chinese companies</h3>
            </div>
          </div>

          <p class="mt-20 text-3xl text-center font-semibold leading-7">Why Choose Us</p>
          <div class="mt-10 text-lg leading-8">
            We offer the most cost-effective products on the market. Our one-on-one exclusive service will perfectly address all your shopping needs,
            making your purchasing journey a breeze and worry-free.
          </div>

          <dl class="mx-auto mt-8 grid max-w-2xl grid-cols-1 gap-8 text-base leading-7 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:gap-x-16">
            {reasonList.map((reason) => <Reason reason={reason} />)}
          </dl>

          <p class="mt-20 text-3xl text-center font-semibold leading-7">Learn how we can help you achieve success in China.</p>
          <div class="flex justify-center items-cente">
            <iframe class="mt-10" width="800" height="400" src="https://www.youtube.com/embed/视频ID" allowfullscreen></iframe>
          </div>

          <p class="mt-20 text-3xl text-center font-semibold leading-7" id="contact-us">Feel free to reach out to us</p>
          <div class="grid grid-cols-2 gap-x-5 mt-10">
            <div class="flex flex-col gap-y-3">
              <div class="text-xl font-semibold">Quick process overview - 5 Easy Steps</div>
              <div>
                <div class="font-semibold">Step 1: Reach out to us.</div>
                <dd class="text-sm">Fill in the contact form, briefly describe your needs, and start the conversation.</dd>
              </div>
              <div>
                <div class="font-semibold">Step 2: Communication confirmation.</div>
                <dd class="text-sm">We engage in in-depth discussions with you to ensure we truly understand your real needs.</dd>
              </div>
              <div>
                <div class="font-semibold">Step 3: Exclusive service.</div>
                <dd class="text-sm">Provide one-on-one service to carefully select cost-effective products for you.</dd>
              </div>
              <div>
                <div class="font-semibold">Step 4: Confirm payment.</div>
                <dd class="text-sm">Review product information and quickly complete a secure payment process.</dd>
              </div>
              <div>
                <div class="font-semibold">Step 5: Product shipping.</div>
                <dd class="text-sm">Products are dispatched promptly, with tracking provided to ensure fast delivery.</dd>
              </div>
            </div>
            <ContactToMe />
          </div>
        </div>
      </div>

      <div class="mt-12 flex flex-row items-center justify-center gap-12 border-y border-[var(-gray-100)] p-10">
        <div>
          <img src="/assets/home/promise.jpg" alt="Promise" class="w-[570px] h-[400px]" />
        </div>
        <div class="w-[400px]">
          <h3 class="text-3xl">Global Reach, Local Touch</h3>
          <p class="my-4">Utilize our local expertise to smoothly fulfill your ideas and requests.</p>
          <CallToAction href="/services/"> Request a Report </CallToAction>
        </div>
      </div>
      <div class="mt-20 flex flex-col items-center mb-5">
        <h2 class="my-4 text-center text-3xl font-bold">ChinaSupport by the Numbers</h2>
        <div class="my-5 flex mx-auto px-6 lg:px-8">
          <div class="text-center w-80">
            <h3 class="text-6xl font-bold py-6">58</h3>
            <p class="text-xl">Supportive Partner</p>
          </div>
          <a class="text-center w-80" href="/services/">
            <h3 class="text-6xl font-bold py-6">79</h3>
            <p class="text-xl">Task Completed</p>
          </a>
          <div class="text-center w-80">
            <h3 class="text-6xl font-bold py-6">7</h3>
            <p class="text-xl">Countries and Regions</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
